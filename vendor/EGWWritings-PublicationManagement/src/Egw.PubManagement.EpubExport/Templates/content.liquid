<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops" lang="{{ language }}" dir="{{ langDir }}">
<head>
    <title>{{ publicationTitle | decode }}</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" type="text/css" href="../css/bookstyles.css" />
</head>
<body>
<div class="chapter" id="content{{chapter.FileNumberFormatted}}">
    {% for paragraph in paragraphs%}
    {{ paragraph.Content | decode }}
    {% endfor %}
    {% if chapter.Footnotes.size > 0 %}
        <hr class="footnote" />
        {% for fn in chapter.Footnotes %}
        {{ fn.Content | decode }}
        {% endfor %}
    {% endif %}
</div>
</body>
</html>
