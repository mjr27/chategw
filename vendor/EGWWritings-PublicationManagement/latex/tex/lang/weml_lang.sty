\RequirePackage[english,bidi=basic]{babel}
\RequirePackage[tracking,final,babel]{microtype}
\RequirePackage{luacode}
\newcommand\setupfont[2][\font@serif]{
    \babelfont[english]{rm}{#1}
    \babelfont{rm}[RawFeature={fallback=egwfontfallback}]{#2}
    \directlua{luaotfload.add_fallback("egwfontfallback", {"#1:mode=harf;"})}
}
